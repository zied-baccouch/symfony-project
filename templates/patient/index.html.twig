{% extends 'base.html.twig' %}

{% block title %}Patient index{% endblock %}

{% block body %}
    <h1>Patient index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdPatient</th>
                <th>MedecinId</th>
                <th>NomPrenom</th>
                <th>DateNaiss</th>
                <th>Genre</th>
                <th>DateEntree</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.idPatient }}</td>
                <td>{{ patient.medecinId }}</td>
                <td>{{ patient.nomPrenom }}</td>
                <td>{{ patient.dateNaiss ? patient.dateNaiss|date('Y-m-d') : '' }}</td>
                <td>{{ patient.genre }}</td>
                <td>{{ patient.dateEntree ? patient.dateEntree|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_patient_show', {'idPatient': patient.idPatient}) }}">show</a>
                    <a href="{{ path('app_patient_edit', {'idPatient': patient.idPatient}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_patient_new') }}">Create new</a>
{% endblock %}
